<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/gold</item>
    </style>

    <style name="customTabTex" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="login_hint">
        <item name="android:text">Phone Number</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="button_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="service_label_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="style_timeslot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">7dp</item>
        <item name="android:background">@drawable/background_like</item>
    </style>

    <style name="profile_history_layout">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|top</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="profile_history_card">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="stylist_layout">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|top</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="stylist_card">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="cardCornerRadius">15dp</item>
    </style>

    <style name="profile_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingVertical">7dp</item>
        <item name="android:background">@drawable/background_separator_bottom</item>
    </style>

    <style name="profile_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">left|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>


</resources>