<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/gold</item>
    </style>

    <style name="customTabTex" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">monospace</item>
    </style>

    <style name="profile_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">9dp</item>
        <item name="android:background">@color/lighter_gray</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="profile_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">left|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="profile_tab_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="profile_text_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">left|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="general_text_tab_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">left|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">19sp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="weekday_tab">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:background">@drawable/background_date_default</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="edit_work_hour">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">17sp</item>
        <item name="android:inputType">time</item>
        <item name="android:maxLength">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:paddingHorizontal">2dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="timeslot_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="timeslot_tab">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">7dp</item>
        <item name="android:layout_marginVertical">5dp</item>
        <item name="android:background">@drawable/background_date_default</item>
        <item name="android:layout_marginHorizontal">10dp</item>
    </style>

    <style name="image_check_time">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

</resources>