<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layoutParent"
    tools:context="dev.hci.manager.activities.EditDiscountActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:paddingHorizontal="10dp"
        android:paddingVertical="7dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:onClick="onBackDiscount"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISCOUNT DETAILS"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textColor="@color/gold"
            android:fontFamily="monospace"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="onRegisterClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/lighter_gray"
            android:paddingTop="30dp"
            android:paddingBottom="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingVertical="20dp"
                    android:paddingHorizontal="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:text="Title"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:text="@string/general_required_hint"
                                android:maxLines="1"
                                android:textColor="@color/dark_gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <RelativeLayout style="@style/edit_box">


                            <EditText
                                android:id="@+id/editDiscountName"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@null"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:text="Start\nDate"
                                android:maxLines="2"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:text="@string/general_required_hint"
                                android:maxLines="1"
                                android:textColor="@color/dark_gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layoutStartDateDiscount"
                            style="@style/edit_box">

                            <TextView
                                android:id="@+id/txtStartDateDiscount"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:paddingLeft="2dp"
                                android:background="@null"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:text="01/07/2021"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:text="End\nDate"
                                android:maxLines="2"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:text="@string/general_required_hint"
                                android:maxLines="1"
                                android:textColor="@color/dark_gray"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/layoutEndDateDiscount"
                            style="@style/edit_box">


                            <TextView
                                android:id="@+id/txtEndDateDiscount"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:paddingLeft="2dp"
                                android:background="@null"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:maxLines="1"
                                android:text="31/07/2021"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </RelativeLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginRight="5dp">

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:text="Discount"
                                android:maxLines="1"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="monospace"
                                android:gravity="left|center"
                                android:text="@string/general_required_hint"
                                android:maxLines="1"
                                android:textColor="@color/dark_gray"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <RelativeLayout style="@style/edit_box">


                            <EditText
                                android:id="@+id/editDiscountValueEdit"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@null"
                                android:fontFamily="monospace"
                                android:gravity="center"
                                android:hint="000"
                                android:inputType="number"
                                android:maxLength="3"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:fontFamily="monospace"
                            android:gravity="left|center"
                            android:maxLines="1"
                            android:text="%"
                            android:textColor="@color/dark_gray"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnAddDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="15dp"
                    android:onClick="onAddDiscountClick"
                    android:background="@drawable/background_separator_bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Discount"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textColor="@color/dark_gray"
                        android:textSize="18dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <ImageView
                        android:id="@+id/imgAddService"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/ic_add"
                        android:layout_marginHorizontal="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recViewDiscountService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="85dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <CalendarView
                android:id="@+id/calendarStartDate"
                android:layout_width="250dp"
                android:layout_height="310dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="85dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <CalendarView
                android:id="@+id/calendarEndDate"
                android:layout_width="250dp"
                android:layout_height="310dp"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>