<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dev.hci.manager.activities.ScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerSchedule"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabSchedule"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:tabIndicatorColor="@color/gold"
                app:tabBackground="@drawable/background_nav_tab"
                app:tabIndicatorGravity="top"
                app:tabTextAppearance="@style/customTabTex"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>