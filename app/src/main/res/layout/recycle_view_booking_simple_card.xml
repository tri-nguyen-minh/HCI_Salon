<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bookingCardLinear"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:paddingVertical="10dp"
    android:gravity="center"
    android:background="@drawable/background_separator_bottom">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp">


        <TextView
            android:id="@+id/txtAppointmentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:layout_alignParentLeft="true"
            android:text="Appointment"
            android:textColor="@color/red"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/layoutDate"/>

        <TextView
            android:id="@+id/txtAppointmentCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:fontFamily="monospace"
            android:layout_alignParentLeft="true"
            android:text="124"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/txtAppointmentLabel"
            app:layout_constraintBottom_toTopOf="@+id/layoutDate"/>

        <LinearLayout
            android:id="@+id/layoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtBookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="Wed, June 06 2021"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:textColor="@color/dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:gravity="left|center"
                android:text="at"
                android:textSize="13sp"
                android:fontFamily="monospace"
                android:textColor="@color/dark_gray"/>

            <TextView
                android:id="@+id/txtBookingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="08:00"
                android:textSize="14sp"
                android:textColor="@color/dark"
                android:fontFamily="monospace"/>

        </LinearLayout>


        <TextView
            android:id="@+id/txtBookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:layout_alignParentLeft="true"
            android:text="Finished"
            android:textColor="@color/red"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDate"/>

        <TextView
            android:id="@+id/txtBookingTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="100.000d"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dark_gold"
            android:fontFamily="monospace"
            app:layout_constraintRight_toLeftOf="@+id/imgBookingDetail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txtBookingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Services"
            android:fontFamily="monospace"
            android:textSize="13sp"
            android:textColor="@color/dark_gray"
            android:gravity="left|center"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toLeftOf="@+id/imgBookingDetail"
            app:layout_constraintTop_toBottomOf="@+id/txtBookingTotalPrice"/>


        <ImageView
            android:id="@+id/imgBookingDetail"
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_key_right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>