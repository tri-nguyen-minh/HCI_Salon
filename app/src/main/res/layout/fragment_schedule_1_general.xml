<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lighter_gray"
    android:gravity="top|center"
    tools:context="dev.hci.manager.fragments.schedule.GeneralScheduleFragment">

    <TextView
        android:text="Weekday Schedule"
        style="@style/general_text_tab_header"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_separator_right">

                <LinearLayout
                    android:id="@+id/btnMonday"
                    android:onClick="onWeekdayClick"
                    style="@style/weekday_tab">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/txtTimeMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 - 20:00"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnTuesday"
                    android:onClick="onWeekdayClick"
                    style="@style/weekday_tab">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/txtTimeTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 - 20:00"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnWednesday"
                    android:onClick="onWeekdayClick"
                    style="@style/weekday_tab">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/txtTimeWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 - 20:00"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnThursday"
                    android:onClick="onWeekdayClick"
                    style="@style/weekday_tab">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thursday"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/txtTimeThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 - 20:00"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_separator_left">

                <LinearLayout
                    android:id="@+id/btnFriday"
                    android:onClick="onWeekdayClick"
                    style="@style/weekday_tab">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/txtTimeFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 - 20:00"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnSaturday"
                    android:onClick="onWeekdayClick"
                    style="@style/weekday_tab">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/txtTimeSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 - 20:00"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnSunday"
                    android:onClick="onWeekdayClick"
                    style="@style/weekday_tab">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunday"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/txtTimeSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 - 20:00"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btnWeek"
                    android:onClick="onWeekdayClick"
                    style="@style/weekday_tab">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whole Week"
                        android:fontFamily="monospace"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/txtTimeWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07:00 - 20:00"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/gray"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:text="Weekday Schedule"
        style="@style/general_text_tab_header"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            android:paddingVertical="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_separator_right"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_separator_left"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>